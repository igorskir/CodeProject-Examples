                    <TextBox Width="200">Some text</TextBox>
                    <Button Width="50">11</Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label>Label 12:</Label>
                    <TextBox Width="200">Some text</TextBox>
                    <Button Width="50">12</Button>
                </StackPanel>
            </Lancer1WPF:ArrangePanel>
        </Border>
    </Grid>
</Window>
